/* result.wxss */
.container {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.section {
  margin-bottom: 40rpx;
  width: 100%;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.copy-btn {
  padding: 10rpx 30rpx;
  background-color: #007aff;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  width: 80px!important;
  margin: 0!important;
}

.image-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.generated-image {
  width: 100%;
  max-width: 600rpx;
  height: 600rpx;
  border-radius: 15rpx;
}

.input-card,
.result-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.input-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  word-break: break-all;
}

.tips-section {
  margin: 60rpx 0;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.actions {
  display: flex;
  gap: 30rpx;
  margin-top: 60rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background-color: #007aff;
  color: white;
}

.action-btn.secondary {
  background-color: white;
  color: #007aff;
  border: 2rpx solid #007aff;
}
