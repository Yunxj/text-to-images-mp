/* profile.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: white;
  position: relative;
  margin-bottom: 20rpx;
}

.user-info, .guest-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.user-id {
  font-size: 26rpx;
  opacity: 0.8;
}

.user-type {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 登录和升级按钮 */
.login-btn, .upgrade-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.login-btn:active, .upgrade-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.upgrade-btn {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #fff;
}

/* 统计数据 */
.stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.stat-label {
  font-size: 26rpx;
  opacity: 0.8;
}

/* VIP会员卡片 */
.vip-card {
  background: #fff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.vip-card.vip-active {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  border-color: #FFD700;
}

.vip-content {
  display: flex;
  align-items: center;
}

.vip-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.vip-text {
  flex: 1;
}

.vip-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.vip-desc {
  font-size: 26rpx;
  opacity: 0.7;
}

.vip-arrow {
  font-size: 32rpx;
  opacity: 0.7;
}

/* 功能入口网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin: 20rpx 30rpx;
}

.function-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.function-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.function-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.function-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 作品区域 */
.works-section {
  margin: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #667eea;
}

.works-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.work-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.work-item:active {
  transform: scale(0.98);
}

.work-image {
  width: 100%;
  height: 200rpx;
}

.work-info {
  padding: 20rpx;
}

.work-prompt {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.work-time {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-works {
  text-align: center;
  padding: 80rpx 40rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: block;
}

.empty-action {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 教程横幅 */
.tutorial-banner {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  margin: 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.3);
}

.tutorial-content {
  display: flex;
  align-items: center;
}

.tutorial-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.tutorial-text {
  flex: 1;
}

.tutorial-title {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.tutorial-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 菜单区域 */
.menu-section {
  background: #fff;
  margin: 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 弹窗样式 */
.vip-modal, .exchange-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  background: #fff;
  width: 600rpx;
  border-radius: 20rpx;
  overflow: hidden;
  animation: modalSlideUp 0.3s ease-out;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #f8f8f8;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 36rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 40rpx 30rpx;
}

/* VIP特权列表 */
.vip-privileges {
  margin-bottom: 40rpx;
}

.privilege-item {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.privilege-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.privilege-text {
  font-size: 28rpx;
  color: #333;
}

/* VIP价格 */
.vip-price {
  text-align: center;
  margin-bottom: 40rpx;
}

.price-label {
  display: block;
  font-size: 24rpx;
  color: #ff4444;
  margin-bottom: 10rpx;
}

.price-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4444;
  margin-bottom: 5rpx;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.vip-buy-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #ff4444, #ff6666);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 兑换码输入 */
.exchange-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.exchange-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
} 