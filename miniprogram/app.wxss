/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局按钮样式 */
.btn-primary {
  background: linear-gradient(45deg, #1aad19, #00d4aa);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
}

.btn-secondary.active {
  background: #1aad19;
  color: white;
  border-color: #1aad19;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  padding: 32rpx;
  margin: 16rpx;
}

/* 输入框样式 */
.input-wrapper {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
}

.input-wrapper.focus {
  border-color: #1aad19;
  background: white;
}

/* 角色选择器样式 */
.character-item {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin: 16rpx;
  position: relative;
  overflow: hidden;
}

.character-item.selected {
  border: 4rpx solid #1aad19;
}

.character-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.character-name {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 20rpx;
  text-align: center;
  padding: 8rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 40rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
} 